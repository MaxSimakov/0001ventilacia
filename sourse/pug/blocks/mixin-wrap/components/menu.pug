					var subnav= { 
						"Строительство загородных домов":"#",
						"Отделка загородных домов":"#",
						"Покраска деревянных домов":"#",
						"Штукатурные фасады загородных домов":"#" ,
						}
				each sublinkPatch, sublinkName in nav
					+e.LI.item( temprop="item"  )
						+e.A.link(href="#" itemprop="url")= sublinkName 
						
		each linkPatch, linkName in nav
			+e.LI.item( temprop="item" itemprop="url"): +e.A.link(href="#" itemprop="url")= linkName
		+e.LI.item--search( temprop="item" itemprop="url")
			+e.A.btn-search.btn(href="#")
